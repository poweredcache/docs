{
  "opts": {
    "destination": "docs",
    "template": "node_modules/wp-hookdoc/template",
    "recurse": true,
    "readme": "./README.md"
  },
  "source": {
    "includePattern": ".+\\.(php|inc)?$"
  },
  "plugins": [
    "node_modules/wp-hookdoc/plugin",
    "plugins/markdown"
  ],
    "templates":  {
      "default": {
        "layoutFile": "template/layout.tmpl",
        "staticFiles": {
          "include": [
            "./node_modules/wp-hookdoc/template/static"
          ]
        }
      }
    }
}